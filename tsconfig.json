{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "allowJs": false,
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "bin",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src"
    },
    "include": [
        "src/**/*.*"
    ]
}
